    Layout = null;
}

<div id="divSummary">

    <!--Title-->
    <div class="row">
        <div class="customer-data-title">
            <div class="customer-data-title-items customer-data-title-icon">
                <span class="summary-icon"></span>
            </div>
            <div class="customer-data-title-items customer-data-title-label">
                <span>RESUMEN</span>
            </div>
        </div>
    </div>
    <!--Title-->

    <div>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-justified" role="tablist">
            
            <li role="presentation" class="active">
                <a href="#detailed" aria-controls="benefits" role="tab" data-toggle="tab">

                    <div class="customer-data-title box">

                        <div class="customer-data-title-items customer-data-title-icon">
                            <span class="detailed-icon"></span>
                        </div>

                        <div class="customer-data-title-items customer-data-title-label">
                            <span>DETALLADO</span>
                        </div>

                    </div>
